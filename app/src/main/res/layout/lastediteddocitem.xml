<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_marginBottom="8dp"
    android:weightSum="1"
    android:id="@+id/ladteditedmainlayout"
    android:foreground="?attr/selectableItemBackground"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemImage"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/notebookhh"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="0.2"
        android:tint="@color/charcoal_black"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/notebookname"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="NoteBook"
            android:textSize="16dp"
            android:fontFamily="@font/intermedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/notebookType"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="note"
            android:textSize="14dp"
            android:fontFamily="@font/interregular"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/lastdatetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Edited"
            android:textColor="@android:color/black"
            android:layout_gravity="end"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/lastEdietdDate"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="sat Dec 28"
            android:textSize="14dp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>
