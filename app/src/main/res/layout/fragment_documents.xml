<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".HomeScreen.Documents.DocumentsFragment"
    android:background="@drawable/docsbg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/userProfileSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/setting_4_svgrepo_com"
                android:tint="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="start"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/userNameHome"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="User"
                    android:textColor="@color/applightgreen"
                    android:fontFamily="@font/intersbold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="create something,"
                    android:textColor="@color/appgrey"
                    android:textSize="20dp"
                    android:fontFamily="@font/intermedium"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/userprofile"
                android:layout_gravity="right"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="58dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#2a272d"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainhomelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.78"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="@drawable/docs2bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="vertical"
            android:weightSum="1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Options"
                    android:layout_marginStart="25dp"
                    android:textColor="@color/charcoal_black"
                    android:fontFamily="@font/intermedium"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tools and services"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/appgrey"
                    android:fontFamily="@font/intermedium"
                    android:textSize="15dp"/>
            </LinearLayout>
            <HorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchDocumentCardView"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/appyellow"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/searchcardbutton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/search_magnifying_glass_svgrepo_com"
                                android:contentDescription="Image button"
                                android:layout_gravity="start"
                                android:layout_margin="5dp"
                                android:tint="@android:color/black"
                                />

                            <!-- Text Below the ImageButton -->
                            <TextView
                                android:id="@+id/searchtextBelowImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center"
                                android:text="browse"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/intermedium"  />
                            <TextView
                                android:id="@+id/searchlowercurrentpoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Search"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/interbold"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/getPointsCardView"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/applightpurple"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imageButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/points_1_svgrepo_com"
                                android:contentDescription="Image button"
                                android:layout_gravity="start"
                                android:layout_margin="5dp"
                                android:tint="@android:color/black"
                                />

                            <!-- Text Below the ImageButton -->
                            <TextView
                                android:id="@+id/textBelowImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center"
                                android:text="Points"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/intermedium"  />
                            <TextView
                                android:id="@+id/lowercurrentpoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Earn"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/interbold"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sharedCardView"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/light_lavender"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/sharedcardbutton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/sharedsvg"
                                android:contentDescription="Image button"
                                android:layout_gravity="start"
                                android:layout_margin="5dp"
                                android:tint="@android:color/black"
                                />

                            <!-- Text Below the ImageButton -->
                            <TextView
                                android:id="@+id/sharedtextBelowImageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center"
                                android:text="collab"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/intermedium"  />
                            <TextView
                                android:id="@+id/sharedlowercurrentpoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Shared"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/interbold"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/applightgreen"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/shop_2_svgrepo_com"
                                android:contentDescription="Image button"
                                android:layout_gravity="start"
                                android:layout_margin="5dp"
                                android:tint="@android:color/black"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center"
                                android:text="Market"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/intermedium"  />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Explore"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/interbold"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/smartinkcardview"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/applightgrey"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ai_svgrepo_com"
                                android:contentDescription="Image button"
                                android:layout_gravity="start"
                                android:layout_margin="5dp"
                                android:tint="@android:color/black"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_gravity="center"
                                android:text="Smart Ink"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/intermedium"  />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="update"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:fontFamily="@font/interbold"
                                android:layout_gravity="center"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents"
                        android:layout_marginStart="25dp"
                        android:textColor="@color/charcoal_black"
                        android:fontFamily="@font/intermedium"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="documents and folders"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/appgrey"
                        android:fontFamily="@font/intermedium"
                        android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/docRecycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="15dp"
                android:layout_weight="0.9"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>