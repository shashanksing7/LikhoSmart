<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popuplayoutbackground"
   >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/leftpopupbutton"
        android:layout_marginRight="0.2dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/middlebuttonlayout"
        android:layout_marginRight="0.5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/rightbuttonlayout"/>

</LinearLayout>
